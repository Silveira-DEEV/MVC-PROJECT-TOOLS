@{
    ViewData["Title"] = "Registre";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/registre.css">
    <link rel="shortcut icon" href="~/images/logo_site-removebg-preview.png" type="image/x-icon">
</head>

<body>
    <div class="register-container">
             <img id="logoSenai" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSEmhaEK0AahY6v7bsr8h61jxmKMol_EbpZag&s" alt="Logo Senai">

        <h1>Registro</h1>

        <form id="registerForm">
            <div>
                <label for="email"><strong>E-mail</strong></label>
                <input type="email" id="email" placeholder="Digite seu e-mail" required>
            </div>
            <div>
                <label for="password"><strong>Senha</strong></label>
                <input type="password" id="password" placeholder="Digite sua senha" required>
            </div>
            <button type="button" id="registerBtn">Registrar</button>
            <a href="@Url.Action("Login", "Account")" id="haveAccount">Já possui uma conta? Faça login</a>
        </form>

        <p class="message error" id="errorMessage" style="display: none;"></p>
        <p class="message success" id="successMessage" style="display: none;"></p>

        <p id="errorMessage" style="color: red; display: none;">Email já Cadastrado</p>
    </div>

    <script type="module" src="~/js/registre.js"></script>
    <script type="module" src="~/js/loading.js"></script>
</body>

</html>
